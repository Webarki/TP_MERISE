{% extends 'base.html.twig' %}

{% block body %}
<h3 class="mt-5 mb-4">Page Category</h3>
    <a href="/public/category/create" ><button class="btn btn-secondary mb-4">Créer une category</button></a>
{% if categories %}
<div class="table-responsive">
 <table class="table table-dark table-hover" align="center">
  <tr>
    <th>#</th>
    <th>title</th>
    <th>description</th>
  </tr>
  {% for category in categories %}
  <tr>
    <td>
    {{ category.id }}
    </td>
    <td>  
      {{ category.title }}
    </td>
    <td>  
      {{ category.description }}...
    </td>
    <td>  
      <a href="/public/category/modify/{{ category.id }}">
<i class="fa-solid fa-pen-to-square"></i>
      </a>
    </td>
<td>
<!-- Button trigger modal -->
<span data-bs-toggle="modal" data-bs-target="#exampleModal{{ category.id }}">
  <i class="fa-solid fa-trash text-danger"></i>
</span>
    <!-- Modal -->
<div class="modal fade" id="exampleModal{{ category.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="color:black">
        <p>Ëtes - vous certain de vouloir faire cela ? </p>
        <p>Tout articles associer à cette catégorie sera également supprimer !</p>
        <small class="text-danger">Cette action sera irreversible !</small>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Annuler</button>
   <a href="/public/category/remove/{{ category.id }}">
   <button type="button" class="btn btn-danger">Supprimer</button>
   </a>
      </div>
    </div>
  </div>
</div>
</td>
  </tr>
    {% endfor %}
</table>
</div>
{% else %}
<p class="h3 text-danger mt-3">Il n'existe aucune(s) categorie(s)</p>
{% endif %}
{% endblock %}