{% extends 'base.html.twig' %}
{% block styles %}
<link rel="stylesheet" href="../dist/assets/css/style.css">
<link rel="stylesheet" href="../../dist/assets/css/style.css">
{% endblock %} 
{% block body %}
<hr/>
{% if comment %}
<h3 class="mb-3">Modifier le Commentaire</h3>
<div class="card text-center">
  <div class="card-body">
<form method="post">
<div class="form-group">
<label for="content">Votre commentaire :</label>
<label for="state">Status : </label>
<select class="mt-3 form-select" name="state" aria-label="state">
  <option value="0" {{ comment.state == false ? "selected" : ""}}>En attente</option>
  <option value="1" {{ comment.state == true ? "selected" : ""}}>Valider</option>
</select>
</div>
<input type="hidden" name="id_article" value="{{ comment.id_article }}"/>
<hr/>
<div class="text-center mt-3">
<button type="submit" class="btn btn-outline-success" name="btnUpdate">Modifier</button>
    <a href="/public/comment" class="btn btn-outline-warning">Annuler</a>
</div>
</form>
  </div>
</div>
{% else %}
<h3 class="mb-3">Créer un Commentaire</h3>
<div class="card text-center">
  <div class="card-body">
<form method="post" enctype="multipart/form-data">
<div class="form-group">
<label for="content">Votre commentaire :</label>
<textarea name="content" class="form-control"></textarea>
</div>
<hr/>
<div class="text-center mt-3">
<button type="submit" class="btn btn-outline-success" name="btnCreate">Créer</button>
    <a href="/public/article/view/{{ params }}" class="btn btn-outline-warning">Annuler</a>
</div>
</form>
  </div>
</div>
{% endif %}
{% endblock %}
