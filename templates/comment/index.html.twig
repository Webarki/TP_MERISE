{% extends 'base.html.twig' %}

{% block body %}
<h3 class="mt-4 mb-4">Page Comment</h3>
{% if comments %}
<div class="table-responsive">
 <table class="table table-dark" align="center">
  <tr>
    <th>#</th>
    <th>username</th>
    <th>content</th>
    <th>state</th>
    <th>article</th>
  </tr>
 
  {% for comment in comments %}
  <tr>
    <td>
    {{ comment.id }}
    </td>
    <td>  
      {{ comment.username }}
    </td>
    <td>  
      {{ comment.content }}
    </td>
    <td>  
      {% if  comment.state  == 1 %}
        <i class="fa-solid fa-check text-success"></i>
      {% else %}
        <i class="fa-solid fa-circle-xmark text-danger"></i>
      {% endif %}
    </td>
    <td>  
     <a href="/public/article/view/{{ comment.id_article }}">
      <i class="fa-solid fa-link"></i>
      </a>
    </td>
    <td>  
      <a href="/public/comment/modify/{{ comment.id }}">
      <i class="fa-solid fa-pen-to-square"></i>
      </a>
    </td>
<td>
<!-- Button trigger modal -->
<span data-bs-toggle="modal" data-bs-target="#exampleModal{{ comment.id }}">
  <i class="fa-solid fa-trash text-danger"></i>
</span>

<!-- Modal -->
<div class="modal fade" id="exampleModal{{ comment.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" style="color:black">
        <p>Ã‹tes - vous certain de vouloir faire cela ?</p>
        <small class="text-danger">Cette action sera irreversible !</small>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-warning" data-bs-dismiss="modal">Annuler</button>
   <a href="/public/comment/remove/{{ comment.id }}">
   <button type="button" class="btn btn-danger">Supprimer</button>
   </a>
      </div>
    </div>
  </div>
</div>
</td>
  </tr>
    {% endfor %}
</table>
</div>
{% else %}
<p class="h3 text-danger">Il n'existe aucun(s) commentaire(s)</p>
{% endif %}
{% endblock %}